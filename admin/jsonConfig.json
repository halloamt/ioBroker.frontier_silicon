{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Options",
            "items": {
                "IP": {
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "IP address",
                    "help": "IPV4 address of your media player e.g. 192.168.123.123"
                },
                "PIN": {
                    "type": "password",
                    "repeat": false,
                    "visible": true,
                    "maxLength": 4,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "PIN code",
                    "help": "PIN of your media player, default is 1234"
                },
                "SangeanNoSound": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "No sound",
                    "help": "Check this box only if your media player starts DAB without sound"
                },
                "RecreateSessionInterval": {
                    "newLine": true,
                    "type": "number",
                    "min": 60,
                    "max": 3600,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Session refresh interval",
                    "help": "Validity period of a session in minutes"
                },
                "PollIntervall": {
                    "type": "number",
                    "min": 1,
                    "max": 60,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Polling interval",
                    "help": "Status polling interval in seconds"
                }
            }
        }
    }
}
